body{
  background: url("<%= asset_path 'bg.jpg' %>")
}
.site_container{
  background: #fff;
  margin-top: 60px;
  padding:40px 40px 40px 40px;
  .copy-form{
    cursor: pointer;
    text-decoration: underline;
  }
}
.content{
  font: 90% "Trebuchet MS", sans-serif;
}
.login{
  color: #fff;
  margin-top: 10px;
}
#companies, #employees{
  margin-bottom: 20px;
}
table#companies, table#employees{
  font-size: 12px;
}
/* css for timepicker */
.ui-timepicker-div .ui-widget-header { margin-bottom: 8px; }
.ui-timepicker-div dl { text-align: left; }
.ui-timepicker-div dl dt { height: 25px; margin-bottom: -25px; }
.ui-timepicker-div dl dd { margin: 0 10px 10px 65px; }
.ui-timepicker-div td { font-size: 90%; }
.ui-tpicker-grid-label { background: none; border: none; margin: 0; padding: 0; }

.ui-timepicker-rtl{ direction: rtl; }
.ui-timepicker-rtl dl { text-align: right; }
.ui-timepicker-rtl dl dd { margin: 0 65px 10px 10px; }
.message{
  color:red;
}
.modal-body {
  min-height: 520px;
}
.employee{
  background: #F4CCCC;
}
table{
  font-size: 14px;
}
ul.filter{
  margin: 0px;
  padding: 0px;
  overflow: hidden;
  li{
    list-style: none;width:33.333%;
    line-height: 1.5em;
    border-bottom: 1px solid #eeeeee;
    float: left;
    display: inline;
  }
}
#loading{
  width: 35px;
  margin: auto;
}
.index{
  background: #000;
  color: #fff;
  width: 21px;
  font-size: 12px;
  text-align: center;
  height: 21px;
  line-height: 22px;
  border-radius: 20px;
  margin: 7px;
}
.version_date{
  height: 35px;
  line-height: 18px;
  padding-left: 30px;
  font-size: 16px;
}
#companies_length, #employees_length{
  label{
    display: inline;
  }
}
