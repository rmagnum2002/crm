<% if employee %>
<p>
  <%= t(:'activity.index.added_contact') %> <%= link_to employee.full_name, company_employee_path(employee.company, employee) %> <%= t(:"activity.index.to_company") %> <%= link_to employee.company.name, employee.company %>
</p>

<p>
  <% if employee.job_title %>
    <div><%= t(:'employee.index.job_title_id') %>: <%= dt_job_title(employee) %></div>
  <% end %>
  <div><%= t(:'employee.index.language') %>: <%= t(Employee::LANGUAGE[employee.language]) %></div>
  <div><%= employee.decision? ? I18n.t(:"employee.form.take_decision") : I18n.t(:"employee.form.cant_take_decision") %></div>
  <div><%= t(:'employee.index.phone') %>: <%= employee.phone %></div>
  <div><%= t(:'employee.index.mobile') %>: <%= employee.mobile %></div>
  <div><%= t(:'employee.index.simtravel') %>: <%= employee.simtravel %></div>
  <div><%= t(:'employee.index.birthday') %>: <%= l employee.birthday, format: :long %></div>
</p>
<% else %>
added contact wich has since been removed
<% end %>
