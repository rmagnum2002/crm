<div class="comment_<%= comment.id %>">
  <div style="border-left: 1px solid rgba(0, 0, 0, 0.2);padding-left:5px;">
    <%= comment.content %>
    <div><%= link_to comment.user.full_name, profile_path(comment.user) %> | <%= l comment.created_at, format: :long %></div>
    <% if comment.events.present? %>
      <div class="well">
        <% comment.events.each do |event| %>
          <% if event.action_id %>
            <b>Result:</b> <%= t(Event::RESULT[event.action_id]) %>
          <% end %>
          <%= event.employee.full_name if event.employee.present? %>
          <% unless event.email == "" %>
             - <%= event.email %>
          <% end %>
          <% if event.event_date %>
            <b>Date:</b> <%= l event.event_date, format: :long %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <%#= link_to 'Destroy', company_comment_path(@commentable, comment), method: :delete,
                      data: { confirm: 'Delete comment?' }, remote: true if comment.user == current_user %>
  </div>
</div>
<hr>
