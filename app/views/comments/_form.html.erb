<%= form_for [@commentable, @comment], remote: true do |f| %>
  <% if @comment.errors.any? %>
    <div class="error_messages">
      <h2>Please correct the following errors.</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <% f.radio_button :type_id, 3 %>
  </div>
  <div class="control-group">
    <%= f.text_area :content, rows: 4, class: "input-xxlarge", placeholder: "Comment" %>
  </div>
  <div class="control-group">
    <%= f.select :result_id, Comment::RESULT.invert.map{|t| t }, :include_blank => "Select result" %>
  </div>
  <div class="control-group">
    <%= f.text_field :result_date, placeholder: 'Date', class: 'date_select' %> <%= f.text_field :result_time, placeholder: 'Time' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
(function() {
  jQuery(function() {
    return $('#comment_result_date').datepicker({
      dateFormat: 'yy-mm-dd',
      <% if @locale == 'ro' %>
        monthNames: ['Ianuarie','Februarie','Martie','Aprilie','Mai','Iunie', 'Iulie','August','Septembrie','Octombrie','Noiembrie','Decembrie'],
        dayNames: ['Dum', 'Luni', 'Mar', 'Mier', 'Joi', 'Vin', 'Sâmb'],
        firstDay: 1
      <% elsif @locale == 'ru' %>
        monthNames: ['Январь','Февраль','Март','Апрель','Май','Июнь', 'Июль','Август','Сентябрь','Октябрь','Ноябрь','Декабрь'],
        dayNames: ['Dum', 'Luni', 'Mar', 'Mier', 'Joi', 'Vin', 'Sâmb'],
        firstDay: 1
      <% end %>
    });
  });

}).call(this);

</script>
