<dt><strong><%= t(:"company.show.added_by") %>:</strong></dt>
<dd><%= link_to @company.user.full_name, profile_path(@company.user) %></dd>
<dt><strong><%= t(:"company.show.responsible") %>:</strong></dt>
<%- opts = { :type => :textarea, :ok_button => t(:'save'), :cancel_button => t(:'cancel'), :use_confirm => false, :nil => t(:"nothng") } %>
<%- opts.delete(:ok_button) if params[:suppress_ok_button] %>
<dd>
  <%= best_in_place @company, :responsible_id, :type => :select, :collection => User.all.map{|x| [x.id, link_to(x.full_name, profile_path(x))]} %>
</dd>
<dt><strong><%= t(:"company.show.number_employees") %>:</strong></dt>
<dd><%= best_in_place @company, :number_employees, opts %></dd>
