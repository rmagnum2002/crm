<% if current_language == "ru" %>
  $('.control-group .controls.state_0').html('<%= j select_tag :state_id, options_for_select(@states_0.map{|s| [s.name_ru, s.id]}),
    name: "company[addresses_attributes][0][state_id]", id: "state_id_0" if @states_0.count > 0 %>');
  <% elsif current_language == "ro" %>
    $('.control-group .controls.state_0').html('<%= j select_tag :state_id, options_for_select(@states_0.map{|s| [s.name_ro, s.id]}),
    name: "company[addresses_attributes][0][state_id]", id: "state_id_0" if @states_0.count > 0 %>');
  <% else %>
    $('.control-group .controls.state_0').html('<%= j select_tag :state_id, options_for_select(@states_0.map{|s| [s.name, s.id]}),
    name: "company[addresses_attributes][0][state_id]", id: "state_id_0" if @states_0.count > 0 %>');
<% end %>
