<div class="page-header">
  <h1><%= t(:"company.index.companies") %></h1>
  <%= link_to t('.new', :default => t("helpers.links.new")), new_company_path %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:"company.index.created_at") %></th>
      <th><%= t(:"company.index.id") %></th>
      <th><%= t(:"company.index.name") %></th>
      <th><%= t(:"company.index.client_category_id") %></th>
      <th><%= t(:"company.index.client_type_id") %></th>
      <!-- <th><%#= t(:"company.index.company_source_id") %></th> -->
      <th><%= t(:"company.index.client_at") %></th>
      <th><%= t(:"company.index.phone") %></th>
      <th><%= t(:"company.index.fax") %></th>
      <th><%= t(:"company.index.email") %></th>
      <th><%= t(:"company.index.responsible_id") %></th>
      <!-- <th><%#=t '.actions', :default => t("helpers.actions") %></th> -->
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%=l company.created_at, format: :short %></td>
        <td><%= company.id %></td>
        <td><%= link_to  company.name, company_path(company) %></td>
        <td><%= company.client_category.category if company.client_category_id? %></td>
        <td><%= company.client_type.client_type if company.client_type_id? %></td>
        <!-- <td><%#= company.company_source.source if company.company_source_id? %></td> -->
        <td><%= l company.client_at, format: :long %></td>
        <td><%= company.phone %></td>
        <td><%= company.fax %></td>
        <td><%= company.email %></td>
        <td><%= responsible_name(company.responsible_id) %></td>
<!--         <td>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_company_path(company) %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      company_path(company),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
        </td> -->
      </tr>
    <% end %>
  </tbody>
</table>

