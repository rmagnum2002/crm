<%- model_class = Company -%>
<div class="row-fluid">
  <div class="">
    <h1><%= best_in_place @company, :name %></h1>
  </div>

<div class="row-fluid">
  <div class="form-actions">
    <% if can? :update, @company %>
      <%= link_to t(:"company.show.edit"), edit_company_path(@company), :class => 'btn' %>
      <%= link_to t(:"company.show.destroy"), delete_company_company_path(@company), :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' unless @company.to_delete? %>
    <% end %>
    <%= link_to t(:"company.show.add_contact"), new_company_employee_path(@company), :class => 'btn'  %>
    <span class="marked_to_delete pull-right">
      <% if @company.to_delete? %>
        <%= render 'marked_to_delete' %>
      <% end %>
    </span>
  </div>
</div>

  <div class="span4">
    <h4><%= t(:"company.show.company_profile") %></h4>
    <dl class="dl-horizontal">
      <% if @company.user == current_user %>
        <%= render 'profile_for_owner' %>
      <% else %>
        <%= render 'profile_for_user' %>
      <% end %>
    </dl>
  </div>
  <div class="span6">
    <div class="page-header">
      <%= link_to t(:"company.show.address"), show_address_company_path, remote: true %> |
      <%= link_to t(:"company.show.contacts"), show_contacts_company_path, remote: true %> <span class="badge total_employee"><%= @company.employee.count %></span> |
      <%= link_to t(:"company.show.comments"), comments_company_path, remote: true, class: 'tab_comments' %> <span class="badge total_comments"><%= @company.comments.count %></span> |
      <%= link_to t(:"company.show.sales"), sales_company_path, remote: true %> <span class="badge total_sales"><%= @company.sales.count %></span>
      <% if can? :manage, Version %>
       | <%= link_to t(:'changes_history'), revisions_company_path, remote: true %> <span class="badge total_versions"><%= @company.versions.count %></span>
      <% end %>
    </div>
    <div class="right_side">
      <%= render 'comments' %>
    </div>
  </div>
</div>

