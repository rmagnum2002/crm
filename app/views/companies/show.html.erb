<%- model_class = Company -%>
<div class="row-fluid">
  <div class="page-header">
    <h1><%=t 'company.show.company', :default => model_class.model_name.human %> - <%= best_in_place @company, :name %></h1>
  </div>

  <div class="span4">
    <h4><%= t(:"company.show.company_profile") %></h4>
    <dl class="dl-horizontal">
      <dt><strong><%= t(:"company.show.added_by") %>:</strong></dt>
      <dd><%= link_to @company.user.full_name, profile_path(@company.user) %></dd>
      <dt><strong><%= t(:"company.show.responsible") %>:</strong></dt>
      <dd>
        <%= best_in_place @company, :responsible_id, :type => :select, :collection => User.all.map{|x| [x.id, link_to(x.full_name, profile_path(x))]} %>
      </dd>
      <dt><strong><%= t(:"company.show.number_employees") %>:</strong></dt>
      <dd><%= best_in_place @company, :number_employees %></dd>
      <dt><strong><%= t(:"company.show.company_branch") %>:</strong></dt>
      <dd>
        <%= best_in_place @company, :company_branch_id, :type => :select, :collection => CompanyBranch.all.map{|x| [x.id, x.name]} %>
      </dd>
      <dt><strong><%= t(:"company.show.company_source") %>:</strong></dt>
      <dd>
        <%= best_in_place @company, :company_source_id, :type => :select, :collection => CompanySource.all.map{|x| [x.id, x.name]} %>
      </dd>
      <dt><strong><%= t(:"company.show.client_category") %>:</strong></dt>
      <dd>
        <%= best_in_place @company, :client_category_id, :type => :select, :collection => ClientCategory.all.map{|x| [x.id, x.name]} %>
      </dd>
      <dt><strong><%= t(:"company.show.client_type") %>:</strong></dt>
      <dd>
        <%= best_in_place @company, :client_type_id, :type => :select, :collection => ClientType.all.map{|x| [x.id, x.name]} %>
      </dd>
      <dt><strong><%= t(:"company.show.client_at") %>:</strong></dt>
      <dd><%= l @company.client_at, format: :long %></dd>
      <dt><strong><%= t(:"company.show.phone") %>:</strong></dt>
      <dd><%= best_in_place @company, :phone %></dd>
      <dt><strong><%= t(:"company.show.fax") %>:</strong></dt>
      <dd><%= best_in_place @company, :fax %></dd>
      <dt><strong><%= t(:"company.show.email") %>:</strong></dt>
      <dd><%= best_in_place @company, :email %></dd>
      <dt><strong><%= t(:"company.show.skype") %>:</strong></dt>
      <dd><%= best_in_place @company, :skype %></dd>
      <dt><strong><%= t(:"company.show.website") %>:</strong></dt>
      <dd><%= best_in_place @company, :website %></dd>
      <dt><strong><%= t(:"company.show.facebook") %>:</strong></dt>
      <dd><%= best_in_place @company, :facebook %></dd>
      <dt><strong><%= t(:"company.show.bank_req") %>:</strong></dt>
      <dd><%= best_in_place @company, :bank_req %></dd>
      <dt><strong><%= t(:"company.show.fisc_id") %>:</strong></dt>
      <dd><%= best_in_place @company, :fisc_id %></dd>
    </dl>
  </div>
  <div class="span6">
    <div class="page-header">
      <%= link_to t(:"company.show.address"), show_address_company_path, remote: true %> |
      <%= link_to t(:"company.show.contacts"), show_contacts_company_path, remote: true %> |
      <%= link_to t(:"company.show.comments"), comments_company_path, remote: true %> |
      <%= link_to t(:"company.show.sales"), sales_company_path, remote: true %>
    </div>
    <div class="right_side">
      <%= render 'address' %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="form-actions">
    <%= link_to t(:"company.show.back"),
    companies_path, :class => 'btn'  %>
    <%= link_to t(:"company.show.edit"),
    edit_company_path(@company), :class => 'btn' %>
    <%= link_to t(:"company.show.destroy"),
    company_path(@company),
    :method => 'delete',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-danger' %>
    <%= link_to t(:"company.show.add_contact"), new_company_employee_path(@company), :class => 'btn'  %>
  </div>
</div>
