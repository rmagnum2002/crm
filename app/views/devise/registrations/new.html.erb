<div class="span8 well offset2">
<legend><h3><%= t(:"registrations.sign_up") %></h3></legend>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="control-group">
  <%= f.label t(:"registrations.email"), class: "control-label" %>
  <div class="controls">
    <%= f.email_field :email, :autofocus => true %>
  </div>
</div>
<div class="control-group">
  <%= f.label t(:"registrations.first_name"), class: "control-label" %>
  <div class="controls">
    <%= f.text_field :first_name %>
  </div>
</div>
<div class="control-group">
  <%= f.label t(:"registrations.last_name"), class: "control-label" %>
  <div class="controls">
    <%= f.text_field :last_name %>
  </div>
</div>
<div class="control-group">
  <%= f.label t(:"registrations.password"), class: "control-label" %>
  <div class="controls">
    <%= f.password_field :password %>
  </div>
</div>
<div class="control-group">
  <%= f.label t(:"registrations.password_confirmation"), class: "control-label" %>
  <div class="controls">
    <%= f.password_field :password_confirmation %>
  </div>
</div>
<div class="control-group">
  <div class="controls">
    <%= f.submit t(:"registrations.sign_up"), class: 'btn' %>
  </div>
</div>
<% end %>
<%= render "devise/shared/links" %>
</div>
