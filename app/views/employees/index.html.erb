<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:"employee.index.id") %></th>
      <th><%= t(:"employee.index.user_id") %></th>
      <th><%= t(:"employee.index.first_name") %></th>
      <th><%= t(:"employee.index.last_name") %></th>
      <th><%= t(:"employee.index.patronymic") %></th>
      <th><%= t(:"employee.index.gender") %></th>
      <th><%= t(:"employee.index.birthday") %></th>
      <th><%= t(:"employee.index.language") %></th>
      <th><%= t(:"employee.index.company_id") %></th>
      <th><%= t(:"employee.index.job_title_id") %></th>
      <th><%= t(:"employee.index.decision") %></th>
      <th><%= t(:"employee.index.phone") %></th>
      <th><%= t(:"employee.index.mobile") %></th>
      <th><%= t(:"employee.index.simtravel") %></th>
      <th><%= t(:"employee.index.email") %></th>
      <th><%= t(:"employee.index.skype") %></th>
      <th><%= t(:"employee.index.facebook") %></th>
      <th><%= t(:"employee.index.client_date") %></th>
      <th><%= t(:"employee.index.completion") %></th>
      <th><%= t(:"employee.index.created_at") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.id, employee_path(employee) %></td>
        <td><%= employee.user_id %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.patronymic %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.birthday %></td>
        <td><%= employee.language %></td>
        <td><%= employee.company_id %></td>
        <td><%= employee.job_title_id %></td>
        <td><%= employee.decision %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.mobile %></td>
        <td><%= employee.simtravel %></td>
        <td><%= employee.email %></td>
        <td><%= employee.skype %></td>
        <td><%= employee.facebook %></td>
        <td><%= employee.client_date %></td>
        <td><%= employee.completion %></td>
        <td><%=l employee.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employee_path(employee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
