<%- model_class = Employee -%>
<div class="row-fluid">
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human %> -
      <%= best_in_place @employee, :first_name %> <%= best_in_place @employee, :last_name %> <%= best_in_place @employee, :patronymic %>
    </h1>
  </div>

  <div class="span4">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
      <dd><%= l @employee.created_at, format: :long %></dd>
      <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
      <dd><%= best_in_place @employee, :title, :type => :select, :collection => Employee::TITLE.to_a %></dd>
      <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
      <dd><%= @employee.user.full_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
      <dd><%= best_in_place @employee, :last_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
      <dd><%= best_in_place @employee, :first_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:patronymic) %>:</strong></dt>
      <dd><%= best_in_place @employee, :patronymic %></dd>
      <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
      <dd>
        <%= best_in_place @employee, :gender, :type => :select, :collection => Employee::GENDER.to_a %>
      </dd>
      <dt><strong><%= model_class.human_attribute_name(:birthday) %>:</strong></dt>
      <dd><%= l @employee.birthday, format: :long %></dd>
      <dt><strong><%= model_class.human_attribute_name(:language) %>:</strong></dt>
      <dd>
        <%#= Employee::LANGUAGE[@employee.language] %>
        <%= best_in_place @employee, :language, type: :select, collection: Employee::LANGUAGE.to_a %>
      </dd>
      <dt><strong><%= model_class.human_attribute_name(:company_id) %>:</strong></dt>
      <dd>
        <%= best_in_place @employee, :company_id, type: :select, collection: Company.all.map{|x| [x.id, x.name]} %>
      </dd>
      <dt><strong><%= model_class.human_attribute_name(:job_title_id) %>:</strong></dt>
      <dd>
        <%= best_in_place @employee, :job_title_id, :type => :select, :collection => JobTitle.all.map{|x| [x.id, x.job_title]} %>
      </dd>
      <dt><strong><%= model_class.human_attribute_name(:decision) %>:</strong></dt>
      <dd>
        <%= best_in_place @employee, :decision, :type => :checkbox,
                            :collection => ["Can't take decision", "Take decision"] %>
      </dd>
      <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
      <dd><%= best_in_place @employee, :phone %></dd>
      <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
      <dd><%= best_in_place @employee, :mobile %></dd>
      <dt><strong><%= model_class.human_attribute_name(:simtravel) %>:</strong></dt>
      <dd><%= best_in_place @employee, :simtravel %></dd>
      <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
      <dd><%= best_in_place @employee, :email %></dd>
      <dt><strong><%= model_class.human_attribute_name(:skype) %>:</strong></dt>
      <dd><%= best_in_place @employee, :skype %></dd>
      <dt><strong><%= model_class.human_attribute_name(:facebook) %>:</strong></dt>
      <dd><%= best_in_place @employee, :facebook %></dd>
      <dt><strong><%= model_class.human_attribute_name(:client_date) %>:</strong></dt>
      <dd><%= l @employee.client_date, format: :long %></dd>
      <dt><strong><%= model_class.human_attribute_name(:completion) %>:</strong></dt>
      <dd><%= best_in_place @employee, :completion %></dd>
    </dl>
  </div>
  <div class="span6">
    <h4>Comments</h4>
    <%= render partial: 'comments/form' %>
    <div class="comments">
      <%= render @comments %>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                company_path(@company), :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_company_employee_path(@company, @employee), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                company_employee_path(@company, @employee),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
</div>
