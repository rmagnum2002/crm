<div class="events_modal">
  <i class="icon-remove pull-right close_details"></i>
  <div class="page-header">
    <h3>Details for event on <%= l @event.event_date.to_date, format: :long %></h3>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <b>Comment related to event:</b><br>
      <p><%= @event.comment.content %></p>
    </div>
    <div class="span12">
      <p><b><%= @event.event_date.strftime('%H:%M') %> - <%= t(Event::RESULT[@event.action_id]) %></b></p>
      <%= @event.employee_id? ? "#{link_to @event.employee.full_name, company_employee_path(@event.employee.company, @event.employee)} <br>".html_safe : ""  %>
      <% if @event.employee %>
      works for: <%= link_to @event.employee.company.name, @event.employee.company %> <%= @event.email? ? @event.email : "" %>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('.close_details').click(function () {
    $(".events_modal").fadeOut();
  });
</script>
