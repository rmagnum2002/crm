<div class="page-header">
  <h1><%= t(:"events.index.events_calendar") %></h1>
</div>
<%= form_tag events_path, :method => 'get', remote: true, class: "form-search pull" do %>
  <%= text_field_tag :date, params[:date], placeholder: t(:"select_date"), class: "search-query" %>
  <%= submit_tag t(:"search"), class: "btn" %>
<% end %>
<div class="span8 calendar">
  <%= render 'calendar' %>
</div>
<div class="span3 day_events">
  <%= render 'events' %>
</div>
