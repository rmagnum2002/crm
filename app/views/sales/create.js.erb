<% if @sale.valid? %>
  /* Replace the count of sales */
   $(".total_sales").html("(<%= @saleable.sales.count %>)");
   $(".total_ammount").html("<%= @saleable.sales.sum(&:ammount) %>")
  /* Add the new comment to the bottom of the sales list */
  $(".comments").prepend("<%= j(render(@sale)) %>");
  /* Reset the comment form */
  // $(".new_sale")[0].reset();
  $(".items").empty();
  $('.add').trigger('click');
<% else %>
  alert('<%= t(:"error_on_create") %>');
<% end %>
